@model Practice_WebApp_MVC_Venkat_TT.Models.Employee


<html>
    <head>
        <title> Employee Details</title>
    </head>

    <body>
    <div>
        <h2>Employee Details</h2>
        <table>
            <tr>
                <th>Employee Id:</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Name:</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Department:</th>
                <td>@Model.Department</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src="~/Images/@Model.PhotoName" alt="img" height="100" width="100" asp-append-version="true" />
                </td>
            </tr>
        </table>
    </div>
    </body>
</html>
